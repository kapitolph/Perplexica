{
  "name": "Perplexica Development Environment",
  "image": "mcr.microsoft.com/vscode/devcontainers/universal:latest",
  "workspaceFolder": "/workspace",
  "remoteUser": "root",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    },
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    }
  },
  "forwardPorts": [3000, 3001, 4000, 7700],
  "remoteEnv": {
    "PORT": "3001",
    "SIMILARITY_MEASURE": "cosine",
    "OPENAI_API_KEY": "",
    "GROQ_API_KEY": "",
    "ANTHROPIC_API_KEY": "",
    "SEARXNG_API_URL": "http://localhost:32768",
    "OLLAMA_API_URL": ""
  }
}
